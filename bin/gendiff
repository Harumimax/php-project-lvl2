#!/usr/bin/env php
<?php

use function \Differ\genDiff;

require_once __DIR__ . '/../vendor/autoload.php';
require_once __DIR__ . '/../src/docopt.php';

$params = array(
    'argv' => array_slice($_SERVER['argv'], 1),
    'help' => true,
    'version' => 'GenDiff by harumimax 1.0.5',
    'optionsFirst' => false,
);

$handler = Docopt::handle($doc, $params);

try {
    $beforeFilePath = $handler->args['<beforeFilePath>'];
    $afterFilePath = $handler->args['<afterFilePath>'];
    $format = $handler->args['--format'];

    echo genDiff($beforeFilePath, $afterFilePath, $format);
} catch (Exception $e) {
    echo 'Exception: ',  $e->getMessage(), "\n";
}
